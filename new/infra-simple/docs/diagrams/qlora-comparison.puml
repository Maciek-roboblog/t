@startuml qlora-comparison
!theme plain
skinparam backgroundColor #FEFEFE

title QLoRA vs LoRA

package "LoRA" as lora #LightBlue {
    rectangle "Model bazowy\nFP16 (14GB)" as lora_model
    rectangle "Adapter\nFP16" as lora_adapter
    note bottom of lora : = ~16GB GPU RAM (7B model)
}

package "QLoRA" as qlora #LightGreen {
    rectangle "Model bazowy\n4-bit (4GB)" as qlora_model
    rectangle "Adapter\nFP16" as qlora_adapter
    note bottom of qlora : = ~6GB GPU RAM (7B model)
}

lora -[hidden]down-> qlora

note "Redukcja pamieci: ~60%!" as reduction #Yellow
qlora .. reduction

@enduml
